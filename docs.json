{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Zajaly Developer Docs",
  "description": "Developer documentation for Zajaly APIs, SDKs, and tools.",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "href": "https://github.com/rovony"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "type": "github",
        "href": "https://github.com/rovony/ZajalyDocs_Mintlify"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.zajaly.dev"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor",
      "mcp"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/rovony",
      "x": "https://x.com/zajaly"
    }
  },
  "appearance": {
    "default": "dark"
  },
  "fonts": {
    "heading": {
      "family": "Montserrat",
      "weight": 400
    },
    "body": {
      "family": "Poppins",
      "weight": 400
    }
  },
  "styling": {
    "eyebrows": "section",
    "latex": true
  },
  "icons": {
    "library": "fontawesome"
  },
  "search": {
    "prompt": "Search docs..."
  },
  "seo": {
    "metatags": {
      "og:site_name": "Zajaly Developer Docs"
    },
    "indexing": "navigable"
  }
}
